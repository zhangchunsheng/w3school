<code class="aspcode">&lt;%
Dim fs, d, n
Set fs=Server.CreateObject(&quot;Scripting.FileSystemObject&quot;)
Set d=fs.GetDrive(&quot;c:&quot;)
n = &quot;驱动器：&quot; & d
n = n & &quot;&lt;br /&gt;以字节计的可用空间：&quot; & d.AvailableSpace
Response.Write(n)
set d=nothing
set fs=nothing
%&gt;</code>

