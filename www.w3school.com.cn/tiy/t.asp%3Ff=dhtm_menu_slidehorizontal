<script type="text/javascript">
var i=-135
var intHide
var speed=3
function showmenu()
{
clearInterval(intHide)
intShow=setInterval("show()",10)
}
function hidemenu()
{
clearInterval(intShow)
intHide=setInterval("hide()",10)
}
function show()
{
if (i<-12)
	{
	i=i+speed
	document.getElementById('myMenu').style.left=i
	}
}
function hide()
{
if (i>-135)
	{
	i=i-speed
	document.getElementById('myMenu').style.left=i
	}
}
</script>
</head>

