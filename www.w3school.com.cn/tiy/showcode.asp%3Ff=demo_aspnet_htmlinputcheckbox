<code class="jscode">&lt;script  runat=&quot;server&quot;&gt;
Sub submit(Source As Object, e As EventArgs)
if red.Checked=True then
   p1.InnerHtml=&quot;您喜欢红色！&quot;
else
   p1.InnerHtml=&quot;您喜欢蓝色！&quot;
end if
red.checked=false
blue.checked=false
End Sub
&lt;/script&gt;</code>

